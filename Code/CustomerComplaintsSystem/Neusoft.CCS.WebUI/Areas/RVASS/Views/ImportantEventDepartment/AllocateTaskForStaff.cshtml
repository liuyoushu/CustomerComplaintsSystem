@{
    ViewBag.Title = "AllocateTaskForStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Neusoft.CCS.Services.ViewModels; @*导入视图模型所在命名空间*@
@using Neusoft.CCS.Services.Messages;@*导入SOA基本模式“请求-相应”模型消息所在命名空间*@

@*指定该页面模型的类型*@
@model Neusoft.CCS.Services.Messages.LoadingImptEvtDeptFormResponse

@section title{
投诉回访单
}

@*客户端模型验证脚本开启*@
@{Html.EnableClientValidation(true);}

@if (Model.IsSuccess)
{
    using (Html.BeginForm("AllocateTaskForStaff", "ImportantEventDepartment", FormMethod.Post))
    {
        <table border="1px">
            @Html.HiddenFor(s => s.ImptEvtDeptForm.CaseID)
            @Html.HiddenFor(s => s.ImptEvtDeptForm.ImptEvtDeptID)
            @Html.HiddenFor(s => s.ImptEvtDeptForm.BeginTime)
            <tr>
                <td>@Html.LabelFor(s => s.ImptEvtDeptForm.ComplaintDate)</td>
                <td>@Model.ImptEvtDeptForm.ComplaintDate</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(s => s.ImptEvtDeptForm.Class)</td>
                <td>@Model.ImptEvtDeptForm.Class</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(s => s.ImptEvtDeptForm.Describe)</td>
                <td>@Model.ImptEvtDeptForm.Describe</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(s => s.ImptEvtDeptForm.Name)</td>
                <td>@Model.ImptEvtDeptForm.Name</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(s => s.ImptEvtDeptForm.Satisfaction)</td>
                <td>@Model.ImptEvtDeptForm.Satisfaction</td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(s => s.ImptEvtDeptForm.Content)
                </td>
                <td>
                    @Model.ImptEvtDeptForm.Content
                </td>
            </tr>


            <tr>
                <td>
                    @Html.LabelFor(s => s.ImptEvtDeptForm.ComplaintReason)
                </td>
                <td>
                    @Model.ImptEvtDeptForm.ComplaintReason
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(s => s.ImptEvtDeptForm.Duty)
                </td>
                <td>
                    @Model.ImptEvtDeptForm.Duty
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(s => s.ImptEvtDeptForm.Conclusion)
                </td>
                <td>
                    @Html.EditorFor(s => s.ImptEvtDeptForm.Conclusion)
                </td>
            </tr>

            <tr>
                <td>指派受理员</td>
                <td>@Html.DropDownListFor(s => s.ImptEvtDeptForm.AllocatedStaffId, ViewData["complaintHandlerNameWithStaffId"] as IEnumerable<SelectListItem>)</td>
            </tr>



            <tr>
                <td colspan="2" align="right">
                    @*按钮没有相应的HtmlHelper方法，故必须自己写*@
                    <input type="submit" id="btnSure" value="提 交" />
                    <input type="reset" id="btnCancel" value="取 消" />
                </td>
            </tr>

        </table>
    }
}
else
{
    <text>@Model.ErrorMessage</text>
}
